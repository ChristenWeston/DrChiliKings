@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Add a new machine</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.InstallDate)
  @Html.TextBoxFor(model => model.InstallDate)

  <input type="submit" value="Add new machine" />
}
<p>@Html.ActionLink("Show me all the machines", "Index")</p>