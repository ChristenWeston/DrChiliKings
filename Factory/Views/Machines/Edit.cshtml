@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Edit Time!</h2>

<h4>Edit this machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.InstallDate)
  @Html.EditorFor(model => model.InstallDate)

  <input type="submit" value="Save"/>
}
<p>@Html.ActionLink("Back to machines", "Index")</p>