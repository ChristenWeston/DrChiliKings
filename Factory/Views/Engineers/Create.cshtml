@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="home">
  <div class="card border-dark mb-3 mt-5" style="max-width: 50rem;">
    <div class="card-header"><h1>Add a new doctor</h1></div>
    <div class="card-body">
      @using (Html.BeginForm())
      {
        @Html.LabelFor(model => model.Name, new { @class = "my-2 mx-2" })
        @Html.TextBoxFor(model => model.Name, new { @class = "my-2 mx-2" })

        @Html.LabelFor(model => model.DateHired, new { @class = "my-2 mx-2" })
        @Html.TextBoxFor(model => model.DateHired, new { @class = "my-2 mx-2" })
        
        @Html.Label("Select machine", null, new { @class = "my-2 mx-2" })
        @Html.DropDownList("MachineId", null, new { @class = "my-2 mx-2" })

        <button type="submit" class="btn btn-dark btn-sm my-2 mx-2">Add Engineer</button>
      }
      <p>@Html.ActionLink("Show all engineers", "Index", new {area = ""}, new { @class = "btn btn-dark btn-sm my-2 mx-2" })</p>
    </div>
  </div>   
</div>  